<div class="panel panel-warning">
  <div class="panel-heading">
    <h2>WANT RANKING</h2>
  </div>
</div>

<div class="container">
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th width = "50">No.</th>
          <th width = "50">画像</th>
          <th >タイトル</th>
          <th width = "50">WANT</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each_with_index do |item, index| %>
          <tr>
            <td><%= "#{index+1}" %></td>
            <td><%= image_tag(item.medium_image , alt: item.title) %></td>
            <td><%= item.title %></td>
            <td><%= item.wants.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>         